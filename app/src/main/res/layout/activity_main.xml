<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.activitiesandintents.MainActivity"
    android:orientation="vertical">

    <EditText
        android:id="@+id/etData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="Go to second Activity"
        android:onClick="goToSecond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/etUpdateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="Update Text View"
        android:onClick="updateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvDisplayValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/etPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/etPersonGender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnSendSerializable"
        android:onClick="sendPersonObject"
        android:text="Send to Second (Serializable)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnSendParceable"
        android:onClick="sendPersonObject"
        android:text="Send to Second (Parceable)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />





</LinearLayout>
